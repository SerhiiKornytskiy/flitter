<div id="side">
<div class="sidecontent"><%= image_tag current_user.gravatar_url(:size => 30) %>

 <div class="stats"> 
   <%= current_user.username %>
   <br>
   <%= "Number of tweets: #{current_user.twits.count}" %>
  </div>
</div>

<div class="followers">

<%= "Following: #{current_user.friends.count}" %> </div>

<div class="follow_avs">
  <% current_user.friends.each do |friend| %>
    <% if friend != current_user %> 
    <%= link_to image_tag(friend.gravatar_url(:size => 20)), user_path(friend.username) %>
    <%end%>
  <% end %>
</div>

<div class = "search">
  <%= form_tag root_path, :method => 'get' do %>
  <%= text_field_tag :search_query %>
  <%= submit_tag "Search", :name => nil %>
</div>

<%end%>

</div>

